<% parent_region ||= params[:parent_region] %>

	<% country = Carmen::Country.coded(parent_region) %>

	<% if country.nil? %>
	    <label> State</label>
	    <%= text_field(:brand, :state, :placeholder => "state") %>
	<% elsif country.subregions? %>
	    <label> State</label>
	    <%= subregion_select(:brand, :state, parent_region) %>
	<% else %>
	    <label> State</label>
	    <%= text_field(:brand, :state) %>
	<% end %>

	<script>
	//  form_brand_save();
	  $("#brand_state").change(function() {
	    form_brand_save();
	  });
	</script>